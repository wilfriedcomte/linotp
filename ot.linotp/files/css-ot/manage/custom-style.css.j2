	color: #d9eaf2;
}

body {
	font-family: Verdana,Arial,sans-serif; font-size: 1.0em;
	height: 100%;
	margin: 0;
	background: whitesmoke;
}

html {
	height: 100%;
}

#token {
  border:1px solid blue;
}

#token_even {
  background: #CCCCCC;
}

#token_uneven {
  background: #DDDDDD;
}

#wrap {
	margin:0;
	min-width: 900px;
	background: white;
	-webkit-box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.5);
	-moz-box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.5);
	box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.5);
	padding: 10px;
	box-sizing: border-box;
}

#main {
	float: right;
	width: 86%;
	background: #080808;
	position: relative;
	z-index: 1;
	margin-bottom: 20px;
}

#main #tabs #ui-tabs-1 button.ui-button {
	margin-bottom: 0.5em;
}

#tabs {
	border-bottom-right-radius: 0;
	border-bottom-left-radius: 0;
}

.ui-tabs {
	padding: 0;
}

.ui-tabs .ui-tabs-panel {
	padding: .8em .8em;
}

.ui-tabs ul.ui-tabs-nav{
	padding: 0 0 0 .3em;
}

.ui-tabs ul.ui-tabs-nav,
.ui-dialog .ui-dialog-titlebar {
	border-top: none;
	border-left: none;
	border-right: none;
	border-radius: 0;
}

.ui-tabs .ui-tabs-nav li{
	margin: .3em .3em 0 0;
}

.ui-dialog {
	padding: 0;
	-webkit-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.3);
	-moz-box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.3);
	box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.3);
}

.ui-dialog .ui-dialog-titlebar {
	padding: .7em 1em .6em;
}

.ui-dialog .ui-dialog-buttonpane {
	padding: 0 .5em .6em;
}

.ui-dialog .ui-dialog-buttonpane button{
	margin: .6em .5em 0 0;
}

.ui-dialog .ui-dialog-titlebar-close {
	right: .6em;
}

.ui-button-icon-only .ui-button-text,
.ui-button-icons-only .ui-button-text {
	height: 0;
}

#sidebar {
	float:left;
	width:14%;
	background:#fefefe;
	padding-right: 10px;
	position: relative;
	z-index: 1;
	box-sizing: border-box;
	margin-bottom: 20px;
}

#sidebar #realms {
	margin-bottom: 20px;
	line-height: 1.5;
}

#realm {
	width: 100%;
	padding: .4em;
	border-radius: 4px;
}

#selected_tokens {
	font-size: 80%;
	font-style: italic;
}
#selected_users {
	font-size: 80%;
	font-style: italic;
}

#selected_tokens_header span {
	font-weight: bold;
}

#selected_users_header span {
	font-weight: bold;
}

#action-menu li {
	list-style-type: none;
}

.token_config_changed {
	display: inline;
	color: green;
}

.action-button {
	width:100%;
	margin-top: .3em;
}

.ui-widget-header {
	background: none repeat scroll 0 0 #ddd;
}

#header {
	float: left;
	width: 100%;
	margin: 0 0 5px;
	height: 45px;
}

#header #logo {
	background-image: url(/images/OTLogo.png);
	background-repeat: no-repeat;
	background-position: center;
	display: block;
	float: right;
	height: 35px;
	width: 103px;
	margin-top: 5px;
	margin-right: 5px;
}

#header .sf-menu {
	margin-bottom: 0;
}

#header .sf-menu li {
	background-color: #eee;
}

#header .sf-menu li:hover {
	background-color: #FEFEFE;
}

#header .sf-menu > li {
	background-color: transparent;
}

#header .sf-menu > li:hover {
	background-color: transparent;
}

#menu.sf-menu a {
	border-top: none;
	color: black;
	font-size: 16px;
	height: 21px;
}

#header .sf-menu li:first-child a {
	border-left:none;
}

#header .sf-menu > li:hover > a {
	color: #AAA;
}

#nav {
	background: #dddddd;
}

#logout {
	float: right;
}

#main {
	background: #fefefe;
}

#footer {
	clear: both;
	color: #555;
	border-top: 2px solid #1d82b2;
	padding: 10px .4em 0;
	font-size: .9em;
}

#nav ul {
	margin: 0;
	padding: 0;
	list-style: none;
}

#nav li {
	display: inline;
	margin: 0;
	padding: 0;
}

#nav ul li a,
#nav ul li a:visited {
	color: #333;
	padding: 0 10px;
	height: 30px;
	border-right: 1px solid #ffffff;
	line-height: 30px;
	background: #d9eaf2;
	text-decoration: none;
}

#nav ul li a:hover {
 	color:#ffffff;
 	text-decoration:none;
 	border-bottom:3px solid #111111;
 	margin: -3px 0 0 0;
}

/*
 *  Styles for displaying the TokenInfo
 */
.tokeninfoInnerTable {
	border-color: #d9eaf2;
	border-width: 1px 0px;
	border-style: solid;
	border-collapse: collapse
}

.tokeninfoOuterTable {
	border-collapse: collapse;
	vertical-align: top;
	border: 1px solid #d9eaf2;
	padding: 0px 3px 0px 3px;
}

.collapsed-table tr {
  display: none;
}

.italic_label {
	font-style: italic;
}

.cmxform td {
    vertical-align: top;
}

.ui-dialog form.cmxform input,
.ui-dialog form.cmxform textarea{
	width: 100%;
    box-sizing: border-box;
}

.ui-dialog form.cmxform td{
	padding-right: 0;
}

.ui-dialog form.cmxform input[type="checkbox"],
.ui-dialog form.cmxform input[type="radio"]{
	width: inherit;
}

/*
 *  Styles for sms and email provider config
 */
#sms_providers_list,
#email_providers_list{
	padding: 0 .5em;
}

#button_sms_provider_set_default,
#button_email_provider_set_default{
	float: right;
    margin: .5em .5em 0 0;
}

/* Remove padding for secondary buttonpane in provider-configurations */
#dialog_sms_providers .ui-dialog-buttonpane.flat,
#dialog_email_providers .ui-dialog-buttonpane.flat {
	padding: 0!important;
    position: absolute;
    bottom: 0;
    right: 0;
}

.ui-dialog form.cmxform table {
	width: 100%;
}

#dialog_sms_providers,
#dialog_email_providers{
	padding: .5em 0 2.7em;
}

#dialog_sms_providers .list-wrapper,
#dialog_email_providers .list-wrapper{
	overflow: auto;
    height: 100%;
}

.flexigrid div.hDiv th.thOver div,
.flexigrid div.hDiv th.sorted.thOver div {
	border-bottom: none;
	padding-bottom: none;
}

.flexigrid div.hDiv {
	background: #F0F0F0;
	border-bottom: 1px solid #ccc;
}

.flexigrid div.hDiv th.sorted {
	background: #DDDDDD;
}

.flexigrid div.nBtn {
	height: 27px;
}

.ui-state-default,
.ui-widget-content .ui-state-default,
.ui-widget-header .ui-state-default {
	background: #eee!important;
}

.ui-state-active,
.ui-widget-content .ui-state-active,
.ui-widget-header .ui-state-active {
	background: white!important;
}

.ui-state-hover:not(.ui-state-active),
.ui-widget-content .ui-state-hover:not(.ui-state-active),
.ui-widget-header .ui-state-hover:not(.ui-state-active) {
	background: #E1E1E1!important;
}
