/*** STYLES ***/
.javascript_error {
	display:block;
	z-index:2000;
	background-color: #EB6D5A;
	width: 100%;
	position: fixed;
	text-align: center;
	padding: 20px;
	top: 0;
	left: 0;
}

.info_box {
	display: none;
	z-index:1;
	background-color:#56a7d0;
	color: white;
	width:100%-5pt;
	padding: 10px;
	font-size: 12px;
	margin-bottom: 2px;
	-webkit-box-shadow: inset 0px 0px 5px 0px rgba(255,255,255,0.5);
	-moz-box-shadow: inset 0px 0px 5px 0px rgba(255,255,255,0.5);
	box-shadow: inset 0px 0px 5px 0px rgba(255,255,255,0.5);
}
#info_bar {
	display:none;
}

.error_box {
	display: none;
	z-index:1;
	background-color:#fe2b25;
	color: white;
	width:100%-5pt;
	padding: 10px;
	font-size: 12px;
	margin-bottom: 2px;
	-webkit-box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.3);
	-moz-box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.3);
	box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.3);
}

a.close_all {
	display: none; /*block*/
	font-size: 11px;
	margin: 5px 0;
}

.button_info_text {
	margin-left: 5pt;
	font-size: 7pt;
}
.status_line {
	display:block;
	z-index:1;
	background-color:#EEEEEE;
	width:100%;
	min-height:20px;
	position:relative;
}

/*
 * Flexigrid Selection
 */

.flexigrid div.bDiv tr.trSelected:hover td,
.flexigrid div.bDiv tr.trSelected:hover td.sorted,
.flexigrid div.bDiv tr.trOver.trSelected td.sorted,
.flexigrid div.bDiv tr.trOver.trSelected td,
.flexigrid tr.trSelected td.sorted,
.flexigrid tr.trSelected td
	{
	color: #000000;
	background: #56a7d0;
	border-right: 1px solid #2d7fa8;
	border-left: 1px solid #5bacd5;
	border-bottom: 1px solid #3284ad;
}

.flexigrid div.pDiv {
	background: #F0F0F0;
}

.flexigrid div.sDiv {
	border-bottom: 0;
}

.flexigrid {
	padding-top: .8em;
}

#policy_form {
	margin-top: .8em;
}

